{% extends parent_template %}

{% block title %}
    403 - {{ Lang.get('messages.forbidden') }}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    {{ Lang.get('messages.error') }} (403)
{% endblock %}

{% block content %}

    <div style="text-align: center; padding: 4rem 0; max-width: 42rem; margin: 0 auto;">
        <div style="margin-bottom: 2rem;">
            <div class="icon-wrapper large" style="width: 8rem; height: 8rem; margin: 0 auto; background: rgba(168, 85, 247, 0.1); border-radius: 1rem; display: flex; align-items: center; justify-content: center;">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: #a855f7;">
                    <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
            </div>
        </div>
        
        <h1 style="font-size: 3rem; font-weight: 600; color: white; margin-bottom: 1rem; font-family: var(--font-playfair);">
            403
        </h1>
        
        <h2 style="font-size: 1.5rem; font-weight: 600; color: white; margin-bottom: 1rem; font-family: var(--font-playfair);">
            {{ Lang.get('messages.forbidden') }}
        </h2>
        
        <p style="color: #9ca3af; font-size: 1rem; margin-bottom: 2rem; line-height: 1.6;">
            {{ Lang.get('messages.access_denied') }}
        </p>
        
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="{{ route('core.frontend.home') }}" style="display: inline-block; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #7e22ce 0%, #9333ea 50%, #a855f7 100%); color: white; border-radius: 0.5rem; text-decoration: none; font-weight: 500; font-size: 0.875rem;">
                {{ Lang.get('general.support_portal') }}
            </a>
        </div>
    </div>

{% endblock %}
