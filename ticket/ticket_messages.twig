<div class="sp-messages-container" data-position="inline">
    <h2 style="font-size: 1.5rem; font-weight: 600; color: white; margin-bottom: 1.5rem; font-family: var(--font-playfair);">Reply History</h2>
    {% for message in messages %}
        {% if loop.last %}
            {% set unread = true %}
        {% else %}
            {% set unread = lastViewed and lastViewed < message.created_at %}
        {% endif %}

        {% include 'frontend.' ~ template ~ '.ticket.message' with {'unread': unread} %}
    {% endfor %}
</div>
