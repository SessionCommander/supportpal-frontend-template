<ul class="{% if not account %}sp-nav{% else %}sp-text-end{% endif %} sp-ps-0" style="list-style: none; padding: 0; margin: 0; {% if account %}text-align: right;{% endif %}">
    {% if not account %}
        <li style="margin-bottom: 0.5rem;">
            <a href="{{ route('core.frontend.home') }}" {% if route starts with 'core.frontend.home' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'core.frontend.home' %}color: white; position: relative;{% endif %}">
                {{ Lang.get('general.home') }}
                {% if route starts with 'core.frontend.home' %}
                    <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                {% endif %}
            </a>
        </li>
    {% endif %}
    {% if auth_check() %}
        <li style="margin-bottom: 0.5rem;">
            <a href="{{ route('user.profile') }}" {% if route starts with 'user.profile' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.profile' %}color: white; position: relative;{% endif %}">
                {{ Lang.choice('general.account', 1) }}
                {% if route starts with 'user.profile' %}
                    <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                {% endif %}
            </a>
        </li>
        {% if auth_user().password is not empty and not auth_user().loggedInViaSSO() %}
            <li style="margin-bottom: 0.5rem;">
                <a href="{{ route('user.change_password') }}" {% if route starts with 'user.change_password' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.change_password' %}color: white; position: relative;{% endif %}">
                    {{ Lang.get('user.change_password') }}
                    {% if route starts with 'user.change_password' %}
                        <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                    {% endif %}
                </a>
            </li>
            {% if not auth_user().twofa_enabled or not Config.get('settings.force_2fa_users') %}
            <li style="margin-bottom: 0.5rem;">
                <a href="{{ route('user.twofa') }}" {% if route starts with 'user.twofa' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.twofa' %}color: white; position: relative;{% endif %}">
                    {{ Lang.get('user.two_fa') }}
                    {% if route starts with 'user.twofa' %}
                        <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                    {% endif %}
                </a>
            </li>
            {% endif %}
        {% endif %}
        {% if not socialite_providers.isEmpty() %}
            <li style="margin-bottom: 0.5rem;">
                <a href="{{ route('user.linked_account') }}" {% if route starts with 'user.linked_account' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.linked_account' %}color: white; position: relative;{% endif %}">
                    {{ Lang.get('user.linked_accounts') }}
                    {% if route starts with 'user.linked_account' %}
                        <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                    {% endif %}
                </a>
            </li>
        {% endif %}
        {% if auth_user().email_verified %}
            <li style="margin-bottom: 0.5rem;">
                <a href="{{ route('user.email_history') }}" {% if route starts with 'user.email_history' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.email_history' %}color: white; position: relative;{% endif %}">
                    {{ Lang.get('user.email_history') }}
                    {% if route starts with 'user.email_history' %}
                        <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                    {% endif %}
                </a>
            </li>
        {% endif %}
        {% if Config.get('settings.organisations_enabled') and auth_user().organisation_id is not null and auth_user().organisation_access_level == 0 %}
            <li style="margin-bottom: 0.5rem;">
                <a href="{{ route('user.organisation') }}" {% if route starts with 'user.organisation' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.organisation' %}color: white; position: relative;{% endif %}">
                    {{ Lang.choice('user.organisation', 1) }}
                    {% if route starts with 'user.organisation' %}
                        <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                    {% endif %}
                </a>
            </li>
        {% endif %}
        {% if isModuleEnabled('Ticket') %}
            <li style="margin-bottom: 0.5rem;">
                <a href="{{ route('ticket.frontend.ticket.index') }}" {% if route starts with 'ticket.frontend.ticket.index' or route starts with 'ticket.frontend.ticket.show' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'ticket.frontend.ticket.index' or route starts with 'ticket.frontend.ticket.show' %}color: white; position: relative;{% endif %}">
                    {{ Lang.choice('ticket.ticket', 2) }}
                    {% if route starts with 'ticket.frontend.ticket.index' or route starts with 'ticket.frontend.ticket.show' %}
                        <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                    {% endif %}
                </a>
            </li>
        {% endif %}
        <li style="margin-bottom: 0.5rem;">
            <a class="logout-link" data-url="{{ route('user.logout') }}" data-method="post" style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; cursor: pointer;">
                {{ Lang.get('user.logout') }}
            </a>
        </li>
    {% elseif not account %}
        <li style="margin-bottom: 0.5rem;">
            <a href="{{ route('user.login') }}" {% if route starts with 'user.login' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.login' %}color: white; position: relative;{% endif %}">
                {{ Lang.get('user.login') }}
                {% if route starts with 'user.login' %}
                    <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                {% endif %}
            </a>
        </li>
        {% if Config.get('settings.registration_enabled') == 1 %}
            <li style="margin-bottom: 0.5rem;">
                <a href="{{ route('user.register') }}" {% if route starts with 'user.register' %}class="current"{% endif %} style="color: var(--gray-300); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s; {% if route starts with 'user.register' %}color: white; position: relative;{% endif %}">
                    {{ Lang.get('user.register') }}
                    {% if route starts with 'user.register' %}
                        <span style="position: absolute; bottom: 0; left: 0; width: 100%; height: 2px; background: var(--purple-500);"></span>
                    {% endif %}
                </a>
            </li>
        {% endif %}
    {% endif %}
    {% if Config.get('settings.website_url') is not empty and not account %}
        <li class="lg:sp-hidden" style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-800);">
            <a href="{{ Config.get('settings.website_url') }}" style="color: var(--gray-400); text-decoration: none; display: block; padding: 0.5rem 0; transition: color 0.2s;">
                {{ Lang.get('core.back_to_website') }}
            </a>
        </li>
    {% endif %}

    {{ View.fireHook('frontend.navigation') }}
</ul>
