<style>
:root {
  --font-inter: 'Inter', sans-serif;
  --font-playfair: 'Playfair Display', serif;
  --purple-400: #a855f7;
  --purple-500: #9333ea;
  --purple-600: #7e22ce;
  --purple-700: #6b21a8;
  --purple-800: #581c87;
  --purple-900: #3b0764;
  --gray-100: #f3f4f6;
  --gray-300: #d1d5db;
  --gray-400: #9ca3af;
  --gray-500: #6b7280;
  --gray-700: #374151;
  --gray-800: #1f2937;
  --gray-900: #111827;
  --gray-950: #030712;
}

body {
  font-family: var(--font-inter), system-ui, sans-serif;
  background-color: var(--gray-950);
  color: var(--gray-100);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-playfair), Georgia, serif;
  font-weight: 600;
}

/* Header Styling */
header {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  z-index: 50 !important;
  background-color: transparent !important;
  backdrop-filter: blur(12px);
  border-bottom: 1px solid transparent;
  transition: all 0.3s ease;
}

header.scrolled {
  background-color: rgba(3, 7, 18, 0.95) !important;
  border-bottom: 1px solid rgba(168, 85, 247, 0.2);
}

.sp-logo {
  height: 40px;
  width: 40px;
}

/* Navigation Links */
header .sp-container > div > div:last-child a:not(.bg-purple-gradient):not(.sp-action):not(.sp-search-button) {
  color: var(--gray-300) !important;
  text-decoration: none !important;
  transition: color 0.2s ease;
  position: relative;
}

header .sp-container > div > div:last-child a:not(.bg-purple-gradient):not(.sp-action):not(.sp-search-button):hover {
  color: white !important;
}

header .sp-container > div > div:last-child a:not(.bg-purple-gradient):not(.sp-action):not(.sp-search-button)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--purple-500);
  transition: width 0.3s ease;
}

header .sp-container > div > div:last-child a:not(.bg-purple-gradient):not(.sp-action):not(.sp-search-button):hover::after {
  width: 100%;
}

/* Purple Gradient Button */
.bg-purple-gradient {
  background: linear-gradient(135deg, #7e22ce 0%, #9333ea 50%, #a855f7 100%);
  color: white !important;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-weight: 500;
  font-size: 0.875rem;
  text-decoration: none !important;
  display: inline-block;
  transition: opacity 0.2s;
}

.bg-purple-gradient:hover {
  opacity: 0.9;
  color: white !important;
}

/* Content Area */
.sp-content-inner {
  background-color: var(--gray-900) !important;
  border: 1px solid rgba(168, 85, 247, 0.2);
  border-radius: 0.5rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

/* Footer Styling */
footer {
  background-color: var(--gray-900) !important;
  border-top: 1px solid rgba(168, 85, 247, 0.2);
  color: var(--gray-400);
}

footer a {
  color: var(--gray-400) !important;
  transition: color 0.2s;
}

footer a:hover {
  color: var(--purple-400) !important;
}

/* Form Elements */
input[type="text"],
input[type="email"],
input[type="password"],
input[type="search"],
textarea,
select {
  background-color: var(--gray-800) !important;
  border: 1px solid var(--gray-700) !important;
  color: var(--gray-100) !important;
  border-radius: 0.375rem;
}

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus,
input[type="search"]:focus,
textarea:focus,
select:focus {
  border-color: var(--purple-500) !important;
  outline: none;
  box-shadow: 0 0 0 3px rgba(168, 85, 247, 0.1);
}

/* Buttons */
button[type="submit"],
.sp-button,
.sp-form-button button {
  background: linear-gradient(135deg, #7e22ce 0%, #9333ea 50%, #a855f7 100%);
  color: white;
  border: none;
  padding: 0.5rem 1.5rem;
  border-radius: 0.5rem;
  font-weight: 500;
  cursor: pointer;
  transition: opacity 0.2s;
}

button[type="submit"]:hover,
.sp-button:hover,
.sp-form-button button:hover {
  opacity: 0.9;
}

/* Links */
a {
  color: var(--purple-400);
  transition: color 0.2s;
}

a:hover {
  color: var(--purple-300);
}

/* Breadcrumb */
.sp-breadcrumb {
  color: var(--gray-400);
}

.sp-breadcrumb a {
  color: var(--gray-400);
}

.sp-breadcrumb a:hover {
  color: var(--purple-400);
}

/* Alerts */
.sp-alert-success {
  background-color: rgba(34, 197, 94, 0.1);
  border: 1px solid rgba(34, 197, 94, 0.3);
  color: #86efac;
}

.sp-alert-error {
  background-color: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: #fca5a5;
}

.sp-alert-warning {
  background-color: rgba(251, 191, 36, 0.1);
  border: 1px solid rgba(251, 191, 36, 0.3);
  color: #fde047;
}

/* Mobile Navigation */
.sp-mobile-nav {
  background-color: var(--gray-950) !important;
  border-top: 1px solid rgba(168, 85, 247, 0.2);
}

.sp-mobile-nav a {
  color: var(--gray-300) !important;
}

.sp-mobile-nav a:hover {
  color: white !important;
}

/* Dropdown */
.sp-dropdown {
  background-color: var(--gray-900) !important;
  border: 1px solid rgba(168, 85, 247, 0.2);
  border-radius: 0.5rem;
}

.sp-dropdown a {
  color: var(--gray-300) !important;
}

.sp-dropdown a:hover {
  color: white !important;
  background-color: var(--gray-800);
}

/* Search */
.sp-search {
  background-color: var(--gray-950) !important;
}

.sp-search input[type="search"] {
  background-color: var(--gray-800) !important;
  color: var(--gray-100) !important;
}

/* Avatar */
.sp-avatar {
  border: 2px solid var(--purple-500);
}

/* Scrollbar */
::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
  background: var(--gray-900);
}

::-webkit-scrollbar-thumb {
  background: var(--purple-700);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--purple-600);
}

/* Responsive adjustments */
@media (min-width: 768px) {
  footer .sp-grid {
    grid-template-columns: repeat(4, minmax(0, 1fr)) !important;
  }
  
  footer .sp-mt-8 {
    flex-direction: row !important;
  }
}

/* Footer link hover effects */
footer a:hover {
  color: var(--purple-400) !important;
}

/* Table styling */
table {
  background-color: var(--gray-800);
  border-color: var(--gray-700);
  color: var(--gray-100);
}

table th {
  background-color: var(--gray-700);
  color: var(--gray-100);
}

table td {
  border-color: var(--gray-700);
}

/* Card/Box styling */
.sp-dashboard-section,
.sp-card {
  background-color: var(--gray-800);
  border: 1px solid rgba(168, 85, 247, 0.2);
  border-radius: 0.5rem;
  transition: all 0.2s ease;
}

.sp-dashboard-section:hover,
.sp-card:hover {
  border-color: rgba(168, 85, 247, 0.5);
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

/* Icon colors */
.sp-icon i {
  color: var(--purple-400);
}

/* Breadcrumb improvements */
.sp-breadcrumb {
  font-size: 0.875rem;
}

/* Search input improvements */
.sp-search input[type="search"]::placeholder {
  color: var(--gray-500);
}

/* Smooth transitions */
* {
  transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease;
}

/* Header link hover effects */
header a[href*="/features"]:hover,
header a[href*="/pricing"]:hover,
header a[href*="/about"]:hover {
  color: white !important;
}

header a[href*="/features"]::after,
header a[href*="/pricing"]::after,
header a[href*="/about"]::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--purple-500);
  transition: width 0.3s ease;
}

header a[href*="/features"]:hover::after,
header a[href*="/pricing"]:hover::after,
header a[href*="/about"]:hover::after {
  width: 100%;
}

/* Logo hover effect */
header a[href*="frontend.home"]:hover .sp-logo {
  transform: scale(1.1);
}

/* Body padding for fixed header */
body {
  padding-top: 0;
}

/* Improve typography */
h1, h2, h3, h4, h5, h6 {
  color: white;
  line-height: 1.2;
}

/* Better spacing */
.sp-content {
  padding-top: 0;
}

/* Search container styling */
.sp-search-container {
  background-color: transparent !important;
  padding-top: 80px;
}

/* Mobile menu improvements */
.sp-mobile-nav {
  padding-top: 80px;
}

/* Ensure proper text colors */
.sp-text-primary,
.sp-text-secondary {
  color: var(--gray-100) !important;
}

.sp-text-tertiary {
  color: var(--gray-400) !important;
}
</style>
