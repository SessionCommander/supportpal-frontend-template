{% extends parent_template %}

{% block title %}{{ type.name }}{% endblock %}

{% block breadcrumb %}
    <span class="page-header-breadcrumb-separator">&raquo;</span>
    <span>{{ type.name }}</span>
{% endblock %}

{% block page_title %}
    {{ type.name }}
{% endblock %}

{% block sidebar %}
    {% include 'frontend.' ~ template ~ '.selfservice.sidebar' %}
    {{ parent() }}
{% endblock %}

{% block content %}

    {# Show all the articles (paginated), starting with most recent #}
    {% include 'frontend.' ~ template ~ '.selfservice.article_list' with {'show_pinned': true} %}

{% endblock %}