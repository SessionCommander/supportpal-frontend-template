{% extends parent_template %}

{% block meta %}
    {% if article.excerpt is not empty %}
        <meta name="description" content="{{ article.excerpt }}" />
        <meta property="og:description" content="{{ article.excerpt }}" />
    {% endif %}

    <meta property="og:type" content="article" />
    <meta property="og:url" content="{{ article.frontendUrl(type) }}" />
{% endblock %}

{% block title %}{{ article.title }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <a href="{{ route('selfservice.index', type.slug) }}">{{ type.name }}</a> &nbsp;&raquo;&nbsp;
    {{ Lang.get('selfservice.viewing_article') }}
{% endblock %}

{% block sidebar %}
    {% include 'frontend.' ~ template ~ '.selfservice.sidebar' %}
    {{ parent() }}
{% endblock %}

{% block precontent %}
    <div class="sp-comments-loading sp-alert sp-alert-error sp-alert-sticky sp-hidden">
        <div class="sp-container sp-mx-auto">
           {{ Lang.get('messages.error_loading_comments') }}
        </div>
    </div>
{% endblock %}

{% block content %}

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; flex-wrap: wrap; gap: 1rem;">
        <div style="flex: 1;">
            <!-- Stats (date, categories, tags) -->
            {% include 'frontend.' ~ template ~ '.selfservice.article_details' %}
        </div>
        <a href="javascript:window.print()" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: rgba(31, 41, 55, 0.5); border: 1px solid rgba(168, 85, 247, 0.2); border-radius: 0.5rem; color: #d1d5db; text-decoration: none; font-size: 0.875rem; transition: all 0.2s;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"/>
                <path d="M6 9V3a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v6"/>
                <rect x="6" y="14" width="12" height="8" rx="1"/>
            </svg>
            {{ Lang.get('general.print') }}
        </a>
    </div>

    <div style="margin-bottom: 2rem; padding-bottom: 2rem; border-bottom: 1px solid rgba(168, 85, 247, 0.2);">
        <!-- Article content -->
        <div class="sp-article"
             data-article-id="{{ article.id }}"
             data-type-id="{{ type.id }}">
            {{ article.purified_text|raw }}
        </div>
    </div>

    <!-- Attachments -->
    {% include 'frontend.' ~ template ~ '.selfservice.article_attachments' %}

    {% if related is defined and not related.isEmpty() %}
        <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid rgba(168, 85, 247, 0.2);">
            <h3 style="font-size: 1.5rem; font-weight: 600; color: white; margin-bottom: 1.5rem; font-family: var(--font-playfair);">
                {{ Lang.get('selfservice.related_articles') }}
            </h3>
            {% include 'frontend.' ~ template ~ '.selfservice.article_related' %}
        </div>
    {% endif %}

    <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid rgba(168, 85, 247, 0.2); display: flex; flex-wrap: wrap; align-items: center; gap: 1.5rem;">
        <!-- Share -->
        <div style="flex: 1; min-width: 200px;">
            <span style="color: #9ca3af; font-size: 0.875rem; margin-right: 0.75rem;">{{ Lang.get('general.share_via') }}</span>
            <a href="mailto:?body={{ article.title|url_encode }} - {{ article.url(type) }}"
               style="display: inline-flex; align-items: center; justify-content: center; width: 2rem; height: 2rem; background: #374151; border-radius: 50%; color: white; text-decoration: none; margin-right: 0.5rem; transition: opacity 0.2s;">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="20" height="16" x="2" y="4" rx="2"/>
                    <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                </svg>
            </a>
            <a href="https://twitter.com/intent/tweet?text={{ article.title|url_encode }}&amp;url={{ article.url(type) }}"
               style="display: inline-flex; align-items: center; justify-content: center; width: 2rem; height: 2rem; background: #000000; border-radius: 50%; color: white; text-decoration: none; margin-right: 0.5rem; transition: opacity 0.2s;">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
            </a>
            <a href="https://www.facebook.com/sharer.php?u={{ article.url(type) }}"
               style="display: inline-flex; align-items: center; justify-content: center; width: 2rem; height: 2rem; background: #3b5998; border-radius: 50%; color: white; text-decoration: none; transition: opacity 0.2s;">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
            </a>
        </div>

        <!-- Rate article -->
        {% if Config.get('settings.ratings_enabled') %}
            <div style="flex: 1; min-width: 200px; text-align: right;">
                {% if Config.get('settings.rating_post') == '0' or auth_check() %}
                    <div style="display: inline-flex; align-items: center; gap: 0.75rem;">
                        <span style="color: #9ca3af; font-size: 0.875rem;">{{ Lang.get('selfservice.article_find_useful') }}</span>
                        <div style="display: inline-flex; gap: 0.25rem; background: rgba(31, 41, 55, 0.5); border: 1px solid rgba(168, 85, 247, 0.2); border-radius: 0.5rem; padding: 0.25rem;">
                            <button class="sp-rate-article {% if rating.isGood() %}selected{% endif %}" data-rating="1" style="background: none; border: none; padding: 0.5rem; cursor: pointer; border-radius: 0.25rem; transition: background 0.2s;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: {% if rating.isGood() %}#22c55e{% else %}#6b7280{% endif %};">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                                    <polyline points="22 4 12 14.01 9 11.01"/>
                                </svg>
                            </button>
                            <button class="sp-rate-article {% if rating.isNeutral() %}selected{% endif %}" data-rating="2" style="background: none; border: none; padding: 0.5rem; cursor: pointer; border-radius: 0.25rem; transition: background 0.2s;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: {% if rating.isNeutral() %}#fbbf24{% else %}#6b7280{% endif %};">
                                    <line x1="5" x2="19" y1="12" y2="12"/>
                                </svg>
                            </button>
                            <button class="sp-rate-article {% if rating.isBad() %}selected{% endif %}" data-rating="0" style="background: none; border: none; padding: 0.5rem; cursor: pointer; border-radius: 0.25rem; transition: background 0.2s;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: {% if rating.isBad() %}#ef4444{% else %}#6b7280{% endif %};">
                                    <circle cx="12" cy="12" r="10"/>
                                    <path d="m15 9-6 6"/>
                                    <path d="m9 9 6 6"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>

    <!-- Comments -->
    {% if Config.get('settings.comments_enabled')
        and (article.comments is not empty or Config.get('settings.comment_write') == 0 or auth_check())
    %}
        <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid rgba(168, 85, 247, 0.2);">
            <a id="comments"></a>

            <h3 style="font-size: 1.5rem; font-weight: 600; color: white; margin-bottom: 1.5rem; font-family: var(--font-playfair); {% if article.comments is empty %}display: none;{% endif %}">
                {{ Lang.choice('selfservice.comment', 2) }}
            </h3>

            {% if Session.has('comment_success') %}
                <div class="sp-alert sp-alert-success">{{ Session.get('comment_success') }}</div>
            {% elseif Session.has('comment_error') %}
                <div class="sp-alert sp-alert-error">{{ Session.get('comment_error') }}</div>
            {% endif %}

            {% if Config.get('settings.comment_write') == 0 or auth_check() %}
                <div class="add-comment-form" style="background: rgba(31, 41, 55, 0.5); border: 1px solid rgba(168, 85, 247, 0.2); border-radius: 0.5rem; padding: 1rem; cursor: pointer; display: flex; align-items: center; margin-bottom: 1.5rem;">
                    <span style="color: #d1d5db;">{{ Lang.get('general.add_item', {'item': Lang.choice('selfservice.comment', 1)}) }}</span>
                    <span style="margin-left: auto;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: #9ca3af; transition: transform 0.2s;" class="chevron-icon">
                            <path d="m6 9 6 6 6-6"/>
                        </svg>
                    </span>
                </div>
                <div class="comment-form-container" style="display: none; margin-bottom: 1.5rem;">
                    {% include 'frontend.' ~ template ~ '.selfservice.forms.comment' with { type: type.id } %}
                </div>
            {% else %}
                <p style="color: #9ca3af; font-size: 0.875rem;">{{ Lang.get('selfservice.login_to_comment') }}</p>
            {% endif %}

            {% if article.comments is not empty %}
                <div style="margin-bottom: 1.5rem; color: #9ca3af; font-size: 0.875rem; display: flex; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
                    <span>{{ Lang.get('general.order_by') }}:</span>
                    <select class="sp-comment-ordering" style="background: rgba(31, 41, 55, 0.5); border: 1px solid rgba(168, 85, 247, 0.2); border-radius: 0.375rem; padding: 0.5rem; color: #f3f4f6; font-size: 0.875rem;">
                        <option value="0" {{ (comment_ordering == '0') ? 'selected="selected"' : '' }}>{{ Lang.get('selfservice.oldest') }}</option>
                        <option value="1" {{ (comment_ordering == '1') ? 'selected="selected"' : '' }}>{{ Lang.get('selfservice.newest') }}</option>
                        <option value="2" {{ (comment_ordering == '2') ? 'selected="selected"' : '' }}>{{ Lang.get('selfservice.highest_rated') }}</option>
                    </select>
                    <span class="sp-loading" style="display: none; padding: 0.5rem 1rem; background: rgba(31, 41, 55, 0.5); border-radius: 0.375rem; align-items: center;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="animation: spin 1s linear infinite;">
                            <path d="M21 12a9 9 0 1 1-6.219-8.56"/>
                        </svg>
                    </span>
                </div>

                {# Show all the comments #}
                <div class="sp-comments-block" data-comment-route="{{ route('selfservice.comment') }}">
                    {% include 'frontend.' ~ template ~ '.selfservice.comment' with {'comments': article.comments, 'type': type.id} %}
                </div>

                {% if comment_total > article.comments|length %}
                    <button class="sp-more-parent-comments" style="display: block; width: 100%; padding: 0.75rem 1.5rem; background: linear-gradient(135deg, #7e22ce 0%, #9333ea 50%, #a855f7 100%); color: white; border: none; border-radius: 0.5rem; font-weight: 500; font-size: 0.875rem; cursor: pointer; margin-top: 1.5rem;">
                        {{ Lang.get('selfservice.show_more_comments') }}
                    </button>
                {% endif %}
            {% endif %}
        </div>
    {% endif %}

{% endblock %}

{% block scripts_footer %}
    <!-- WYSIWYG Editor -->
    <script src="{{ asset_rev('resources/assets/libs/editor.min.js') }}"></script>

    <!-- Custom fields -->
    <script src="{{ asset_rev('resources/assets/general/js/customfields.js') }}"></script>

    <!-- Attachment previews -->
    <script src="{{ asset_rev('resources/assets/libs/att.preview/js/att.preview.min.js') }}"></script>

    <script src="{{ asset_rev('resources/assets/frontend/js/article.js') }}"></script>

    <script>
        // Comment form toggle
        (function() {
            const toggle = document.querySelector('.add-comment-form');
            const form = document.querySelector('.comment-form-container');
            const chevron = document.querySelector('.add-comment-form .chevron-icon');
            
            if (toggle && form && chevron) {
                toggle.addEventListener('click', function() {
                    const isHidden = form.style.display === 'none' || !form.style.display;
                    form.style.display = isHidden ? 'block' : 'none';
                    chevron.style.transform = isHidden ? 'rotate(180deg)' : 'rotate(0deg)';
                });
            }
        })();
    </script>

    {% if show_comment_captcha %}
        {{ Captcha.getJs() }}
    {% endif %}

    {% if jsValidator|default is not empty %}
        {{ jsValidator|raw }}
    {% endif %}
{% endblock %}
