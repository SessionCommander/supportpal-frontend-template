{% extends parent_template %}

{% block title %}{{ Lang.get('core.search_results') }}{% endblock %}

{% block breadcrumb %}
    <span class="page-header-breadcrumb-separator">&raquo;</span>
    <span>{{ Lang.get('core.search_results') }}</span>
{% endblock %}

{% block page_title %}
    {{ Lang.get('core.search_results') }}
{% endblock %}

{% block page_description %}
    <p class="page-header-description">
        {{ Lang.get('core.found_results', {'total': total}) }} '<strong style="color: #a855f7;">{{ term }}</strong>'.
    </p>
{% endblock %}

{% block content %}

    {% if total > 0 %}
        <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid rgba(168, 85, 247, 0.2);">
            {% include 'frontend.' ~ template ~ '.selfservice.article_list' with {'articles': articles, 'noRssFeed': true, 'show_pinned': false} %}
        </div>
    {% else %}
        <div style="text-align: center; padding: 3rem 0; background: rgba(31, 41, 55, 0.5); border: 1px solid rgba(168, 85, 247, 0.2); border-radius: 0.5rem;">
            <div style="margin-bottom: 1rem;">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: #6b7280; margin: 0 auto;">
                    <circle cx="11" cy="11" r="8"/>
                    <path d="m21 21-4.3-4.3"/>
                </svg>
            </div>
            <p style="color: #9ca3af; font-size: 1rem; margin: 0;">
                {{ Lang.get('core.no_results_found') }}
            </p>
        </div>
    {% endif %}

{% endblock %}
